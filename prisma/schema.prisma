generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @map("_id")
  created_at  DateTime @db.Date
  date        String
  description String
  isCompleted Boolean
  isImportant Boolean
  title       String
  updated_at  DateTime @db.Date
  userId      String
}
